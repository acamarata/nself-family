# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nself_family
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Hasura
HASURA_GRAPHQL_ENDPOINT=http://localhost:8080
HASURA_GRAPHQL_ADMIN_SECRET=dev-secret-change-in-production
HASURA_GRAPHQL_JWT_SECRET={"type":"HS256","key":"dev-jwt-secret-change-in-production-min-32-chars"}

# Auth Service
JWT_SECRET=dev-jwt-secret-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=1800        # 30 minutes in seconds
JWT_REFRESH_EXPIRY=2592000    # 30 days in seconds
JWT_ISSUER=nself-family
REFRESH_TOKEN_ROTATION=true
BCRYPT_ROUNDS=10

# Object Storage (MinIO)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_RAW=nf-media-raw
S3_BUCKET_ENCODED=nf-media-encoded
S3_BUCKET_METADATA=nf-media-metadata
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# Redis (for BullMQ job queue)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Email (for notifications)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@myfamily.com

# Environment
NODE_ENV=development
LOG_LEVEL=debug
PORT=3001

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_ISLAMIC_MODE=true
ENABLE_LEGACY_VAULT=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000    # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
