{
  "$schema": "https://raw.githubusercontent.com/nicedayfor/tauri/v2/tooling/cli/schema.json",
  "productName": "nFamily",
  "identifier": "org.nself.family",
  "version": "0.9.0",
  "build": {
    "beforeBuildCommand": "cd ../.. && pnpm build",
    "beforeDevCommand": "cd ../.. && pnpm dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../../.next"
  },
  "app": {
    "title": "ɳFamily",
    "windows": [
      {
        "title": "ɳFamily",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://*.nself.org wss://*.nself.org; img-src 'self' data: blob: https:; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "notification": {
      "all": true
    },
    "updater": {
      "active": true,
      "pubkey": "",
      "endpoints": ["https://releases.nself.org/nfamily/{{target}}/{{arch}}/{{current_version}}"]
    }
  }
}
